<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

    <properties>

        <java.version>11</java.version>

        <web.version>0.0.1-SNAPSHOT</web.version>
        <persistence.version>0.0.1-SNAPSHOT</persistence.version>
        <configuration.version>0.0.1-SNAPSHOT</configuration.version>

    </properties>

    <groupId>com.example</groupId>
    <artifactId>hexagonal-arch-template</artifactId>
    <version>0.0.1-SNAPSHOT</version>

    <modules>
        <module>adapters/web</module>
        <module>adapters/persistence</module>
        <module>configuration</module>
        <module>application</module>
    </modules>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.4.RELEASE</version>
    </parent>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>com.example</groupId>
                <artifactId>web</artifactId>
                <version>${web.version}</version>
            </dependency>

            <dependency>
                <groupId>com.example</groupId>
                <artifactId>persistence</artifactId>
                <version>${persistence.version}</version>
            </dependency>

            <dependency>
                <groupId>com.example</groupId>
                <artifactId>configuration</artifactId>
                <version>${configuration.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

</project>
